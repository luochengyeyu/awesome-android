<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.jetpack.SharedViewModelFragment">

    <Button
        android:id="@+id/btn_view_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/btn_viewmodel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_livedata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_livedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/btn_livedata"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/tv_view"
        app:layout_constraintEnd_toEndOf="@id/btn_view_model"
        app:layout_constraintStart_toStartOf="@id/btn_view_model"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_model" />

    <TextView
        android:id="@+id/tv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_view_model"
        app:layout_constraintStart_toStartOf="@id/btn_view_model"
        app:layout_constraintTop_toBottomOf="@+id/btn_livedata"
        tools:text="view:1" />


</androidx.constraintlayout.widget.ConstraintLayout>